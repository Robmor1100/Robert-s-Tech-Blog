<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
<div class="container">
 <div class="card">
    <h5 class="card-header">{{title}}</h5>
    <div class="card-body">
        <p class="card-text">{{body}}</p>
        <footer class="blockquote-footer">Created by {{user.username}} on <cite title="Source Title">{{ format_date createdAt }}</cite></footer>
    </div>
 </div>

 <div class="card">
  <div class="card-header">
    Comments
  </div>
  {{#each comments as |comment|}}
  <div class="card-body comments">
    <blockquote class="blockquote mb-0">
      <p>{{body}}</p>
      <footer class="blockquote-footer">Posted by {{user.username}} on <cite title="Source Title">{{ format_date createdAt }}</cite></footer>
    </blockquote>
  </div>
    {{/each}}
</div>

<div class="card">
  <div class="card-header">
    Leave a comment: 
  </div>
  <div class="card-body">
    <div class="form-outline mb-4 comment-form" data-postId="{{id}}">
    <label class="form-label" for="form6Example7">Write something...</label>
    <textarea class="form-control" id="comment" rows="4"></textarea>
    <button type="submit" class="btn btn-primary saveComment" value="{{id}}">Post!</button>
  </div>
  </div>
</div>
</div>

<script src="/js/comment.js"></script>