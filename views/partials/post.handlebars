<div class="card">
  <div class="card-header">
    <a href="/post/{{id}}">{{title}}</a>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{boby}}</p>
      <footer class="blockquote-footer">Posted by {{user.username}} on <cite title="Source Title">{{ format_date createdAt }}</cite></footer>
    </blockquote>
  </div>
</div>